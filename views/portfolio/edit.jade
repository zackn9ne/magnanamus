	h1.
		Portfolio ID #{portfolio._id}
	form(action='/portfolio/#{portfolio._id}/edit',method='post',name='updateportfolio',enctype='application/x-www-form-urlencoded')
		p Name:
			input#inputName(type='text', value='#{portfolio.name}', name='name')
		p Badge:
			input#inputBadge(type='number', value='#{portfolio.badge}', name='badge')
		p Thumbnail:
			input#inputThumbnail(type='text', value='#{portfolio.thumbnail}', name='thumbnail')
		p Images sanity check: #{portfolio.images}
		p#imagesHolder Images:
			- for (var i = 0; i < portfolio.images.length; i++)
				input#inputImages(type='text', value='#{portfolio.images[i].path}', name='portfolio.images.path')
				input#inputImages(type='text', value='#{portfolio.images[i].span}', name='portfolio.images.span')
		p Description:
			input#inputDescription(type='text', value='#{portfolio.description}', name='description')
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update

	button#addMore Add more					

