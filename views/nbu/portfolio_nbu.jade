extends layout

block header
	include templates/header.jade

//- list of portfolio items

block content
	main
		each portfolioitem, i in portfoliolist
			article.portfolio(style='background-image: url(../img/#{portfolioitem.featured_image});')
					a(href='#{portfolioitem.link}') #{portfolioitem.title}
						.overlay
							header.hover-title
								h2.post-title  #{portfolioitem.title}
